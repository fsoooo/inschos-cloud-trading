<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.cloud.trading.data.mapper.ProductMapper">

    <sql id="Base_Column_List1">
        `id`,`name`,`display_name`,`category_id`,`code`,`logo`,`bank_num`,`email`,`url`,`phone`,`code_img`,`created_at`,`updated_at`,`state`
    </sql>

    <sql id="Base_Column_List2">
        `id`,`name`,`display_name`,`content`,`insurance_co_id`,`category_id`,`min_people`,`max_people`,`sell_status`,`ins_status`,`base_price`,`base_brokerage`,`pay_type`,`observation_period`,`cooling_off_period`,`latest_date`,`earliest_date`,`code`,`created_at`,`updated_at`,`state`
    </sql>

    <sql id="Base_Column_List3">
        `id`,`name`,`pid`,`level`
    </sql>

    <insert id="addCompany" parameterType="com.inschos.cloud.trading.access.rpc.bean.MyBean"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into ins_company
        (`id`,`name`,`display_name`,`category_id`,`code`,`logo`,`bank_num`,`email`,`url`,`phone`,`code_img`,`created_at`,`updated_at`,`state`)
        values
        (#{id},#{name},#{display_name},#{category_id},#{code},#{logo},#{bank_num},#{email},#{url},#{phone},#{code_img},#{created_at},#{updated_at},#{state})
    </insert>

    <insert id="addProduct" parameterType="com.inschos.cloud.trading.access.rpc.bean.MyBean2"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into product
        (`id`,`name`,`display_name`,`content`,`insurance_co_id`,`category_id`,`min_people`,`max_people`,`sell_status`,`ins_status`,`base_price`,`base_brokerage`,`pay_type`,`observation_period`,`cooling_off_period`,`latest_date`,`earliest_date`,`code`,`created_at`,`updated_at`,`state`)
        values
        (#{id},#{name},#{display_name},#{content},#{insurance_co_id},#{category_id},#{min_people},#{max_people},#{sell_status},#{ins_status},#{base_price},#{base_brokerage},#{pay_type},#{observation_period},#{cooling_off_period},#{latest_date},#{earliest_date},#{code},#{created_at},#{updated_at},#{state})
    </insert>

    <insert id="addCategory" parameterType="com.inschos.cloud.trading.access.rpc.bean.MyBean3"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into product_category
        (`id`,`name`,`pid`,`level`)
        values
        (#{id},#{name},#{pid},#{level})
    </insert>


</mapper>
