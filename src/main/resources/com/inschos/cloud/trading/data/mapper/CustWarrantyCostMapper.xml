<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.cloud.trading.data.mapper.CustWarrantyCostMapper">

    <sql id="Base_Column_List">
        `id`,`warranty_uuid`,`pay_time`,`phase`,`premium`,`actual_pay_time`,`pay_way`,`pay_money`,`pay_status`,`created_at`,`updated_at`
    </sql>

    <insert id="addCustWarrantyCost" parameterType="com.inschos.cloud.trading.model.CustWarrantyCostModel"
            useGeneratedKeys="true"
            keyProperty="id">
        insert ignore into cust_warranty_cost
        (`id`,`warranty_uuid`,`pay_time`,`phase`,`premium`,`actual_pay_time`,`pay_way`,`pay_money`,`pay_status`,`created_at`,`updated_at`)
        values
        (#{id},#{warranty_uuid},#{pay_time},#{phase},#{premium},#{actual_pay_time},#{pay_way},#{pay_money},#{pay_status},#{created_at},#{updated_at})
    </insert>

    <select id="findCustWarrantyCost" parameterType="com.inschos.cloud.trading.model.CustWarrantyCostModel"
            resultType="com.inschos.cloud.trading.model.CustWarrantyCostModel">
        select
        <include refid="Base_Column_List"/>
        from cust_warranty_cost where warranty_uuid=#{warranty_uuid}

    </select>

    <update id="updateCustWarrantyCostActualPayTimeAndPayMoneyAndPayStatusForCarInsuranceByWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.CustWarrantyCostModel">
        update cust_warranty_cost set
        `actual_pay_time`=#{actual_pay_time},`pay_status`=#{pay_status},`pay_money`=#{pay_money},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <update id="updateCustWarrantyCostPayStatusForCarInsuranceByWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.CustWarrantyCostModel">
        update cust_warranty_cost set
        `pay_status`=#{pay_status},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <select id="findCustWarrantyCostTotal"
            resultType="Double"
            parameterType="com.inschos.cloud.trading.model.CustWarrantyCostModel">
        select SUM(`premium`)
        from cust_warranty_cost LEFT JOIN cust_warranty ON cust_warranty.warranty_uuid=cust_warranty_cost.warranty_uuid
        <where>
            cust_warranty.state = 1 AND cust_warranty.warranty_status != 1 AND cust_warranty.warranty_status != 6
            <if test="account_uuid!=null and account_uuid!=''">
                and cust_warranty.account_uuid=#{account_uuid}
            </if>
            <if test="channel_id!=null and channel_id!=''">
                and cust_warranty.channel_id=#{channel_id}
            </if>
            <if test="manager_uuid!=null and manager_uuid!=''">
                and cust_warranty.manager_uuid=#{manager_uuid}
            </if>
            <if test="start_time!=null and start_time!='' and start_time!=0">
                and cust_warranty.start_time&gt;=#{start_time}
            </if>
            <if test="end_time!=null and end_time!='' and end_time!=0">
                and cust_warranty.start_time&lt;#{end_time}
            </if>
        </where>
    </select>


    <select id="findInsurancePolicyListByWarrantyCostStatusStringAndWarrantyStatus"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel"
            resultType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        select
        `id`,`warranty_uuid`,`pre_policy_no`,`warranty_code`,`manager_uuid`,`account_uuid`,`agent_id`,`channel_id`,`plan_id`,`product_id`,`start_time`,`end_time`,`ins_company_id`,`count`,`by_stages_way`,`is_settlement`,`warranty_url`,`warranty_from`,`type`,`warranty_status`,`integral`,`express_no`,`express_company_name`,`express_address`,`express_province_code`,`express_city_code`,`express_county_code`,`delivery_type`,`created_at`,`updated_at`
        from cust_warranty
        <where>
            <choose>
                <when test="page.lastId>0">
                    id&gt;#{page.lastId}
                </when>
                <when test="page.start>0">
                    id&gt;=(select id from cust_warranty where account_uuid=#{account_uuid} AND state=1
                    <if test="search!=null and search!=''">
                        and `warranty_code` like concat("%",#{search},"%")
                    </if>
                    <if test="status_string!=null and status_string!=''">
                        and `warranty_status` in (${status_string})
                    </if>
                    limit #{page.start},1
                    )
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
            and account_uuid=#{account_uuid} AND state = 1
            <if test="search!=null and search!=''">
                and `warranty_code` like concat("%",#{search},"%")
            </if>
            <if test="status_string!=null and status_string!=''">
                and `warranty_status` in (${status_string})
            </if>
            limit #{page.offset}
        </where>
    </select>


</mapper>
