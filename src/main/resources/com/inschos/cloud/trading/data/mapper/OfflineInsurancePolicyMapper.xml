<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.cloud.trading.data.mapper.OfflineInsurancePolicyMapper">

    <sql id="Base_Column_List">
        `id`,`manager_uuid`,`warranty_uuid`,`insured_name`,`policy_holder_name`,`insurance_company`,`insurance_type`,`insurance_product`,`warranty_code`,`payment_time`,`order_time`,`real_income_time`,`start_time`,`end_time`,`premium`,`pay_status`,`brokerage`,`channel_name`,`agent_name`,`is_settlement`,`bill_uuid`,`created_at`,`updated_at`,`state`
    </sql>

    <insert id="addOfflineInsurancePolicy" parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel"
            useGeneratedKeys="true"
            keyProperty="id">
        insert ignore into offline_cust_warranty
        (`id`,`manager_uuid`,`warranty_uuid`,`insured_name`,`policy_holder_name`,`insurance_company`,`insurance_type`,`insurance_product`,`warranty_code`,`payment_time`,`order_time`,`real_income_time`,`start_time`,`end_time`,`premium`,`pay_status`,`brokerage`,`channel_name`,`agent_name`,`is_settlement`,`bill_uuid`,`created_at`,`updated_at`,`state`)
        values
        (#{id},#{manager_uuid},#{warranty_uuid},#{insured_name},#{policy_holder_name},#{insurance_company},#{insurance_type},#{insurance_product},#{warranty_code},#{payment_time},#{order_time},#{real_income_time},#{start_time},#{end_time},#{premium},#{pay_status},#{brokerage},#{channel_name},#{agent_name},#{is_settlement},#{bill_uuid},#{created_at},#{updated_at},#{state})
    </insert>

    <update id="updateSettlementAndBillUuidByWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        update offline_cust_warranty set
        `is_settlement`=#{is_settlement},`bill_uuid`=#{bill_uuid},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <update id="updateBillUuidByWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        update offline_cust_warranty set
        `bill_uuid`=#{bill_uuid},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <select id="findOfflineInsurancePolicyByWarrantyCode" parameterType="java.lang.String"
            resultType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from offline_cust_warranty
        WHERE `warranty_code`=#{_parameter} AND `state`=1
    </select>

    <select id="findOfflineInsurancePolicyByWarrantyUuid" parameterType="java.lang.String"
            resultType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from offline_cust_warranty
        WHERE `warranty_uuid`=#{_parameter} AND `state`=1
    </select>

    <select id="findOfflineInsurancePolicyListForManagerSystem"
            parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel"
            resultType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from offline_cust_warranty
        <where>
            <choose>
                <when test="page.lastId>0">
                    `id`&lt;#{page.lastId}
                </when>
                <when test="page.start>0">
                    `id`&lt;=(select `id` from offline_cust_warranty
                    where `manager_uuid`=#{manager_uuid} AND `state`=1
                    <if test="time_type!=null and time_type!=''">
                        <choose>
                            <when test='time_type=="1"'>
                                <if test="start_time!=null and start_time!=''">
                                    and `real_income_time`&gt;=#{start_time}
                                </if>
                                <if test="end_time!=null and end_time!=''">
                                    and `real_income_time`&lt;#{end_time}
                                </if>
                            </when>
                            <when test='time_type=="2"'>
                                <if test="start_time!=null and start_time!=''">
                                    and `start_time`&gt;=#{start_time}
                                </if>
                                <if test="end_time!=null and end_time!=''">
                                    and `start_time`&lt;#{end_time}
                                </if>
                            </when>
                        </choose>
                    </if>
                    <if test="search_company!=null and search_company!=''">
                        and `insurance_company` like concat("%",#{search_company},"%")
                    </if>
                    <if test="search_channel!=null and search_channel!=''">
                        and`channel_name` like concat("%",#{search_channel},"%")
                    </if>
                    <if test="search_product!=null and search_product!=''">
                        and `insurance_product` like concat("%",#{search_product},"%")
                    </if>
                    ORDER BY `id` DESC limit #{page.start},1
                    )
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
            and `manager_uuid`=#{manager_uuid} AND `state`=1
            <if test="time_type!=null and time_type!=''">
                <choose>
                    <when test='time_type=="1"'>
                        <if test="start_time!=null and start_time!=''">
                            and `real_income_time`&gt;=#{start_time}
                        </if>
                        <if test="end_time!=null and end_time!=''">
                            and `real_income_time`&lt;#{end_time}
                        </if>
                    </when>
                    <when test='time_type=="2"'>
                        <if test="start_time!=null and start_time!=''">
                            and `start_time`&gt;=#{start_time}
                        </if>
                        <if test="end_time!=null and end_time!=''">
                            and `start_time`&lt;#{end_time}
                        </if>
                    </when>
                </choose>
            </if>
            <if test="search_company!=null and search_company!=''">
                and `insurance_company` like concat("%",#{search_company},"%")
            </if>
            <if test="search_channel!=null and search_channel!=''">
                and `channel_name` like concat("%",#{search_channel},"%")
            </if>
            <if test="search_product!=null and search_product!=''">
                and `insurance_product` like concat("%",#{search_product},"%")
            </if>
            ORDER BY `id` DESC limit #{page.offset}
        </where>
    </select>

    <select id="findOfflineInsurancePolicyCountForManagerSystem"
            parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel"
            resultType="long">
        select
        count(id)
        from offline_cust_warranty
        where `manager_uuid`=#{manager_uuid} AND `state`=1
        <if test="time_type!=null and time_type!=''">
            <choose>
                <when test='time_type=="1"'>
                    <if test="start_time!=null and start_time!=''">
                        and `real_income_time`&gt;=#{start_time}
                    </if>
                    <if test="end_time!=null and end_time!=''">
                        and `real_income_time`&lt;#{end_time}
                    </if>
                </when>
                <when test='time_type=="2"'>
                    <if test="start_time!=null and start_time!=''">
                        and `start_time`&gt;=#{start_time}
                    </if>
                    <if test="end_time!=null and end_time!=''">
                        and `start_time`&lt;#{end_time}
                    </if>
                </when>
            </choose>
        </if>
        <if test="search_company!=null and search_company!=''">
            `insurance_company` like concat("%",#{search_company},"%")
        </if>
        <if test="search_channel!=null and search_channel!=''">
            `channel_name` like concat("%",#{search_channel},"%")
        </if>
        <if test="search_product!=null and search_product!=''">
            `insurance_product` like concat("%",#{search_product},"%")
        </if>
    </select>


    <select id="findBrokerageByWarrantyUuid" parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel"
            resultType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        select
        `id`,`brokerage`
        from offline_cust_warranty
        where `warranty_uuid`=#{warranty_uuid} AND `state`=1
    </select>

    <select id="findCompletePayListByManagerUuid" parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel"
            resultType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from offline_cust_warranty
        <where>
            <choose>
                <when test="page.lastId>0">
                    `id`&lt;#{page.lastId}
                </when>
                <when test="page.start>0">
                    `id`&lt;=(select `id` from offline_cust_warranty
                    where `warranty_uuid`=#{warranty_uuid} AND `state`=1 AND `pay_status`=206 AND `insurance_company`=#{insurance_company} AND `is_settlement`=0 AND (`bill_uuid` is NULL OR `bill_uuid`='')
                    <if test="search!=null and search!=''">
                        <choose>
                            <when test='searchType=="1"'>
                                and `cust_warranty`.`warranty_code` like concat("%",#{search},"%")
                            </when>
                            <when test='searchType=="3"'>
                                and `cust_warranty_person`.`insured_name` like concat("%",#{search},"%")
                            </when>
                            <otherwise>
                                and 1=1
                            </otherwise>
                        </choose>
                    </if>
                    <if test="start_time!=null and start_time!='' and end_time!=null and end_time!=''">
                        <choose>
                            <when test='time_type=="1"'>
                                and `offline_cust_warranty`.`order_time`&lt;=#{start_time} AND `offline_cust_warranty`.`order_time`&gt;#{end_time}
                            </when>
                            <when test='time_type=="2"'>
                                and `offline_cust_warranty`.`start_time`&lt;=#{start_time} AND `offline_cust_warranty`.`start_time`&gt;#{end_time}
                            </when>
                            <otherwise>
                                and 1=1
                            </otherwise>
                        </choose>
                    </if>
                    ORDER BY `id` DESC limit #{page.start},1
                    )
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
            AND `warranty_uuid`=#{warranty_uuid} AND `state`=1 AND `pay_status`=206 AND `insurance_company`=#{insurance_company} AND `is_settlement`=0 AND (`bill_uuid` is NULL OR `bill_uuid`='')
            <if test="search!=null and search!=''">
                <choose>
                    <when test='searchType=="1"'>
                        and `cust_warranty`.`warranty_code` like concat("%",#{search},"%")
                    </when>
                    <when test='searchType=="3"'>
                        and `cust_warranty_person`.`insured_name` like concat("%",#{search},"%")
                    </when>
                    <otherwise>
                        and 1=1
                    </otherwise>
                </choose>
            </if>
            <if test="start_time!=null and start_time!='' and end_time!=null and end_time!=''">
                <choose>
                    <when test='time_type=="1"'>
                        and `offline_cust_warranty`.`order_time`&lt;=#{start_time} AND `offline_cust_warranty`.`order_time`&gt;#{end_time}
                    </when>
                    <when test='time_type=="2"'>
                        and `offline_cust_warranty`.`start_time`&lt;=#{start_time} AND `offline_cust_warranty`.`start_time`&gt;#{end_time}
                    </when>
                    <otherwise>
                        and 1=1
                    </otherwise>
                </choose>
            </if>
            ORDER BY `cust_warranty`.`id` DESC limit #{page.offset}
        </where>
    </select>

    <select id="findCompletePayCountByManagerUuid" parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel"
            resultType="long">
        select
        COUNT(id)
        from offline_cust_warranty
        where `warranty_uuid`=#{warranty_uuid} AND `state`=1 AND `pay_status`=206 AND `insurance_company`=#{insurance_company} AND `is_settlement`=0 AND (`bill_uuid` is NULL OR `bill_uuid`='')
        <if test="start_time!=null and start_time!='' and end_time!=null and end_time!=''">
            <choose>
                <when test='time_type=="1"'>
                    and `offline_cust_warranty`.`order_time`&lt;=#{start_time} AND `offline_cust_warranty`.`order_time`&gt;#{end_time}
                </when>
                <when test='time_type=="2"'>
                    and `offline_cust_warranty`.`start_time`&lt;=#{start_time} AND `offline_cust_warranty`.`start_time`&gt;#{end_time}
                </when>
                <otherwise>
                    and 1=1
                </otherwise>
            </choose>
        </if>
    </select>

</mapper>