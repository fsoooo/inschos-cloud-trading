<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.cloud.trading.data.mapper.OfflineInsurancePolicyMapper">

    <sql id="Base_Column_List">
        `id`,`manager_uuid`,`warranty_uuid`,`warranty_code`,`created_at`,`updated_at`,`state`
    </sql>

    <insert id="addOfflineInsurancePolicy" parameterType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into offline_cust_warranty
        (`id`,`manager_uuid`,`warranty_uuid`,`warranty_code`,`created_at`,`updated_at`,`state`)
        values
        (#{id},#{manager_uuid},#{warranty_uuid},#{warranty_code},#{created_at},#{updated_at},#{state})
    </insert>

    <select id="findOfflineInsurancePolicyByWarrantyCode" parameterType="java.lang.String"
            resultType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from offline_cust_warranty
        WHERE `warranty_code`=#{_parameter} AND `state`=1
    </select>

    <select id="findOfflineInsurancePolicyByWarrantyUuid" parameterType="java.lang.String"
            resultType="com.inschos.cloud.trading.model.OfflineInsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from offline_cust_warranty
        WHERE `warranty_uuid`=#{_parameter} AND `state`=1
    </select>

</mapper>