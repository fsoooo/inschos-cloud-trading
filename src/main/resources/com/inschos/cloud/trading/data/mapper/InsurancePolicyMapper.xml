<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.cloud.trading.data.mapper.InsurancePolicyMapper">

    <sql id="Base_Column_List">
        `id`,`warranty_uuid`,`pro_policy_no`,`warranty_code`,`manager_uuid`,`account_uuid`,`agent_auuid`,`ditch_id`,`plan_id`,`product_id`,`premium`,`start_time`,`end_time`,`ins_company_id`,`count`,`pay_time`,`pay_way`,`pay_money`,`by_stages_way`,`is_settlement`,`warranty_url`,`warranty_from`,`type`,`check_status`,`pay_status`,`warranty_status`,`integral`,`express_no`,`express_company_name`,`express_address`,`express_province_code`,`express_city_code`,`express_county_code`,`delivery_type`,`created_at`,`updated_at`,`state`
    </sql>

    <insert id="addInsurancePolicy" parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into cust_warranty
        (`id`,`warranty_uuid`,`pro_policy_no`,`warranty_code`,`manager_uuid`,`account_uuid`,`agent_auuid`,`ditch_id`,`plan_id`,`product_id`,`premium`,`start_time`,`end_time`,`ins_company_id`,`count`,`pay_time`,`pay_way`,`pay_money`,`by_stages_way`,`is_settlement`,`warranty_url`,`warranty_from`,`type`,`check_status`,`pay_status`,`warranty_status`,`integral`,`express_no`,`express_company_name`,`express_address`,`express_province_code`,`express_city_code`,`express_county_code`,`delivery_type`,`created_at`,`updated_at`,`state`)
        values
        (#{id},#{warranty_uuid},#{pro_policy_no},#{warranty_code},#{manager_uuid},#{account_uuid},#{agent_auuid},#{ditch_id},#{plan_id},#{product_id},#{premium},#{start_time},#{end_time},#{ins_company_id},#{count},#{pay_time},#{pay_way},#{pay_money},#{by_stages_way},#{is_settlement},#{warranty_url},#{warranty_from},#{type},#{check_status},#{pay_status},#{warranty_status},#{integral},#{express_no},#{express_company_name},#{express_address},#{express_province_code},#{express_city_code},#{express_county_code},#{delivery_type},#{created_at},#{updated_at},#{state})
    </insert>

    <update id="updateInsurancePolicyProPolicyNoByWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        update cust_warranty set
        `pro_policy_no`=#{pro_policy_no},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <update id="updateInsurancePolicyStatusForCarInsuranceWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        update cust_warranty set
        `pro_policy_no`=#{pro_policy_no},`check_status`=#{check_status},`pay_status`=#{pay_status},`warranty_status`=#{warranty_status},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <update id="updateInsurancePolicyStatusAndWarrantyCodeForCarInsuranceByWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        update cust_warranty set
        `warranty_code`=#{warranty_code},`pay_status`=#{pay_status},`pay_time`=#{pay_time},`warranty_status`=#{warranty_status},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <update id="updateInsurancePolicyExpressInfoForCarInsuranceByWarrantyUuid"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        update cust_warranty set
        `express_no`=#{express_no},`express_company_name`=#{express_company_name},`express_address`=#{express_address},`express_province_code`=#{express_province_code},`express_city_code`=#{express_city_code},`express_county_code`=#{express_county_code},`delivery_type`=#{delivery_type},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <select id="findInsurancePolicyCountByWarrantyStatus"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel"
            resultType="long">
        select count(id)
        from cust_warranty
        WHERE account_uuid=#{account_uuid} AND state=1
        <if test="search!=null and search!=''">
            and `warranty_code` like concat("%",#{search},"%")
        </if>
        <if test="warranty_status!=0">
            and `warranty_status`=#{warranty_status}
        </if>
    </select>

    <select id="findInsurancePolicyDetailByWarrantyUuid"
            parameterType="String"
            resultType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from cust_warranty
        WHERE warranty_uuid=#{_parameter} AND state=1
    </select>

    <select id="findInsurancePolicyPremiumByWarrantyUuid"
            parameterType="String"
            resultType="String">
        select
        `premium`
        from cust_warranty
        WHERE warranty_uuid=#{_parameter} AND state=1
    </select>

    <select id="findInsurancePolicyListByWarrantyStatusOrSearch"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel"
            resultType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from cust_warranty
        <where>
            <choose>
                <when test="page.lastId>0">
                    id&gt;#{page.lastId}
                </when>
                <when test="page.start>0">
                    id&gt;=(select id from cust_warranty where account_uuid=#{account_uuid} AND state=1
                    <if test="search!=null and search!=''">
                        and `warranty_code` like concat("%",#{search},"%")
                    </if>
                    <if test="warranty_status!=0">
                        and `warranty_status`=#{warranty_status}
                    </if>
                    limit #{page.start},1
                    )
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
            and account_uuid=#{account_uuid} AND state = 1
            <if test="search!=null and search!=''">
                and `warranty_code` like concat("%",#{search},"%")
            </if>
            <if test="warranty_status!=0">
                and `warranty_status`=#{warranty_status}
            </if>
            limit #{page.offset}
        </where>

    </select>


    <select id="findInsurancePolicyDetailByPrivateCode" parameterType="String"
            resultType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from cust_warranty where warranty_uuid=#{_parameter} AND state = 1
    </select>

    <select id="findInsurancePolicyPrivateCodeByUnionOrderCode" parameterType="String"
