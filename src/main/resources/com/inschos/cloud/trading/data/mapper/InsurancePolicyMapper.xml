<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inschos.cloud.trading.data.mapper.InsurancePolicyMapper">

    <sql id="Base_Column_List">
        `id`,`warranty_uuid`,`pro_policy_no`,`warranty_code`,`account_uuid`,`buyer_auuid`,`agent_auuid`,`ditch_id`,`plan_id`,`product_id`,`premium`,`start_time`,`end_time`,`ins_company_id`,`count`,`pay_time`,`pay_way`,`by_stages_way`,`is_settlement`,`warranty_url`,`warranty_from`,`type`,`check_status`,`pay_status`,`warranty_status`,`created_at`,`updated_at`,`state`
    </sql>

    <insert id="addInsurancePolicy" parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into cust_warranty
        (`id`,`warranty_uuid`,`pro_policy_no`,`warranty_code`,`account_uuid`,`buyer_auuid`,`agent_auuid`,`ditch_id`,`plan_id`,`product_id`,`premium`,`start_time`,`end_time`,`ins_company_id`,`count`,`pay_time`,`pay_way`,`by_stages_way`,`is_settlement`,`warranty_url`,`warranty_from`,`type`,`check_status`,`pay_status`,`warranty_status`,`created_at`,`updated_at`,`state`)
        values
        (#{id},#{warranty_uuid},#{pro_policy_no},#{warranty_code},#{account_uuid},#{buyer_auuid},#{agent_auuid},#{ditch_id},#{plan_id},#{product_id},#{premium},#{start_time},#{end_time},#{ins_company_id},#{count},#{pay_time},#{pay_way},#{by_stages_way},#{is_settlement},#{warranty_url},#{warranty_from},#{type},#{check_status},#{pay_status},#{warranty_status},#{created_at},#{updated_at},#{state})
    </insert>

    <update id="updateInsurancePolicyProPolicyNoByWarrantyId"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        update cust_warranty set
        `pro_policy_no`=#{pro_policy_no},`updated_at`=#{updated_at}
        where `warranty_uuid`=#{warranty_uuid}
    </update>

    <select id="findInsurancePolicyCountByWarrantyStatus"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel"
            resultType="long">
        select count(id)
        from cust_warranty
        WHERE buyer_auuid=#{buyer_auuid} AND state=1
        <if test="search!=null and search!=''">
            and `warranty_code` like concat("%",#{search},"%")
        </if>
        <if test="warranty_status!=0">
            and `warranty_status`=#{warranty_status}
        </if>
    </select>

    <select id="findInsurancePolicyListByWarrantyStatusOrSearch"
            parameterType="com.inschos.cloud.trading.model.InsurancePolicyModel"
            resultType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from cust_warranty
        <where>
            <choose>
                <when test="page.lastId>0">
                    id&gt;#{page.lastId}
                </when>
                <when test="page.start>0">
                    id&gt;=(select id from cust_warranty where buyer_auuid=#{buyer_auuid} AND state=1
                    <if test="search!=null and search!=''">
                        and `warranty_code` like concat("%",#{search},"%")
                    </if>
                    <if test="warranty_status!=0">
                        and `warranty_status`=#{warranty_status}
                    </if>
                    limit #{page.start},1
                    )
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
            and buyer_auuid=#{buyer_auuid} AND state = 1
            <if test="search!=null and search!=''">
                and `warranty_code` like concat("%",#{search},"%")
            </if>
            <if test="warranty_status!=0">
                and `warranty_status`=#{warranty_status}
            </if>
            limit #{page.offset}
        </where>

    </select>


    <select id="findInsurancePolicyDetailByPrivateCode" parameterType="String"
            resultType="com.inschos.cloud.trading.model.InsurancePolicyModel">
        select
        <include refid="Base_Column_List"/>
        from cust_warranty where warranty_uuid=#{_parameter} AND state = 1
    </select>

